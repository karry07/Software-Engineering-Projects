<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dao.CompanyinfoDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.entity.CompanyinfoEntity" id="companyinfoMap">
        <result property="companynumber" column="companynumber"/>
        <result property="password" column="password"/>
        <result property="companyname" column="companyname"/>
        <result property="personincharge" column="personincharge"/>
        <result property="contactphone" column="contactphone"/>
        <result property="companyemail" column="companyemail"/>
        <result property="companyintroduction" column="companyintroduction"/>
    </resultMap>

	<select id="selectListVO"
		resultType="com.entity.vo.CompanyinfoVO" >
		SELECT * FROM companyinfo  companyinfo
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectVO"
		resultType="com.entity.vo.CompanyinfoVO" >
		SELECT  companyinfo.* FROM companyinfo  companyinfo
 		<where> 1=1 ${ew.sqlSegment}</where>
	</select>

    <select id="selectListView"
		resultType="com.entity.view.CompanyinfoView" >

		SELECT  companyinfo.* FROM companyinfo companyinfo
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectView"
		resultType="com.entity.view.CompanyinfoView" >
		SELECT * FROM companyinfo  companyinfo <where> 1=1 ${ew.sqlSegment}</where>
	</select>
</mapper>